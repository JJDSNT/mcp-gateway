# Caddyfile (dev localhost)

localhost {
  tls internal

  handle_path /mcp/* {
    reverse_proxy mcp-router:8080 {
      transport http {
        versions 1.1
      }
      flush_interval -1
    }
  }

  respond "MCP Gateway Lab OK\n" 200
}

http://localhost {
  redir https://localhost{uri} permanent
}
